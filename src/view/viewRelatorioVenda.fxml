<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ControllerRelatorioVenda"
            prefWidth="1200" prefHeight="800">

    <left>
        <fx:include source="viewSidebar.fxml"/>
    </left>

    <center>
        <VBox spacing="15" padding="20">
            <Label text="Relatório de Vendas" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

            <HBox spacing="15">
                <Label text="Filtrar por Data:"/>
                <DatePicker fx:id="dpInicio"/>
                <Label text="até"/>
                <DatePicker fx:id="dpFim"/>
                <Button text="Filtrar" fx:id="btnFiltrar"/>
            </HBox>

            <TableView fx:id="tableVendas">
                <columns>
                    <TableColumn text="ID" prefWidth="80"/>
                    <TableColumn text="Cliente" prefWidth="200"/>
                    <TableColumn text="Data" prefWidth="150"/>
                    <TableColumn text="Total" prefWidth="120"/>
                </columns>
            </TableView>

            <Label text="Total no período: R$ 0,00" fx:id="lblTotalPeriodo"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </VBox>
    </center>
</BorderPane>
