<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ControllerCadastroProduto"
            prefWidth="1200" prefHeight="800">

    <left>
        <fx:include source="viewSidebar.fxml"/>
    </left>

    <center>
        <VBox spacing="15" padding="20">
            <Label text="Cadastro de Produto" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNomeProduto" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Código de Barras:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCodigoBarra" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Preço:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPreco" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Estoque:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEstoque" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="15">
                <Button text="Salvar" fx:id="btnSalvarProduto"/>
                <Button text="Cancelar" fx:id="btnCancelarProduto"/>
            </HBox>

            <TableView fx:id="tableProdutos">
                <columns>
                    <TableColumn text="Nome" prefWidth="200"/>
                    <TableColumn text="Código" prefWidth="150"/>
                    <TableColumn text="Preço" prefWidth="120"/>
                    <TableColumn text="Estoque" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
