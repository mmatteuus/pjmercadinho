<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ControllerCadastroVenda"
            prefWidth="1200" prefHeight="800">

    <left>
        <fx:include source="viewSidebar.fxml"/>
    </left>

    <center>
        <VBox spacing="15" padding="20">
            <Label text="Registrar Venda" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <Label text="Cliente:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbClientes" prefWidth="300" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Produto:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbProdutos" prefWidth="300" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Quantidade:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtQuantidade" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="15">
                <Button text="Adicionar Produto" fx:id="btnAdicionarProduto"/>
                <Button text="Finalizar Venda" fx:id="btnFinalizarVenda"/>
            </HBox>

            <TableView fx:id="tableVenda">
                <columns>
                    <TableColumn text="Produto" prefWidth="200"/>
                    <TableColumn text="Qtd" prefWidth="80"/>
                    <TableColumn text="PreÃ§o Unit." prefWidth="100"/>
                    <TableColumn text="Subtotal" prefWidth="120"/>
                </columns>
            </TableView>

            <Label text="Total: R$ 0,00" fx:id="lblTotal"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </VBox>
    </center>
</BorderPane>
